{{#if comments.isRunning}}
    {{loading-mask}}
{{else if comments.error}}
    <div class="text-center">        
        <h1>{{comments.error.message}}</h1>
    </div>
{{else if comments.value}}
    <div class="text-center" style="margin-top: 17%;">
        <h1>{{comments.value.length}}</h1>
    </div>
{{/if}}

{{yield}}